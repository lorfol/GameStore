@model GameStore.Web.ViewModels.FilterViewModel


<div id="mySidenav" class="sidenav">

    @using (Html.BeginForm("GetAllGames", "Game", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-horizontal">

            <div>
                @Html.LabelFor(model => model.FilterByName, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FilterByName, new { htmlAttributes = new { @class = "form-control"} })
                    @Html.ValidationMessageFor(model => model.FilterByName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.PriceRange, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PriceRange.Item1, new { htmlAttributes = new { @class = "form-control", @placeholder = "From"} })
                    @Html.ValidationMessageFor(model => model.PriceRange, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PriceRange.Item2, new { htmlAttributes = new { @class = "form-control", @placeholder = "To"} })
                    @Html.ValidationMessageFor(model => model.PriceRange, "", new { @class = "text-danger" })
                </div>
            </div>
            

            <div>
                @Html.LabelFor(model => model.SelectedGenres, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.ListBox("SelectedGenres", Model.AllGenres, new { @class = "chzn-select", data_placeholder = "Genres..." })
                    @Html.ValidationMessageFor(model => model.SelectedGenres, "", new { @class = "text-danger" })
                </div>
            </div>
            <div>
                @Html.LabelFor(model => model.SelectedPlatforms, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.ListBox("SelectedPlatforms", Model.AllPlatforms, new { @class = "chzn-select", data_placeholder = "Plarforms..." })
                    @Html.ValidationMessageFor(model => model.SelectedPlatforms, "", new { @class = "text-danger" })
                </div>
            </div>
            <div>
                @Html.LabelFor(model => model.SelectedPublishers, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.ListBox("SelectedPublishers", Model.AllPublishers, new { @class = "chzn-select", data_placeholder = "Publishers..." })
                    @Html.ValidationMessageFor(model => model.SelectedPublishers, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div>
                @Html.LabelFor(model => model.FilterByOptions, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.FilterByOptions, Model.FilterByOptions, "Not selected", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FilterByName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div>
                @Html.LabelFor(model => model.WhenPublished, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.WhenPublished, Model.WhenPublished, "Not selected", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.FilterByName, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>







        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirm filter" class="btn btn-primary" />
            </div>
        </div>
    }
</div>



