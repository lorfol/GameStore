@using System.Web.UI.WebControls
@using GameStore.Web.ViewModels
@model GameStore.Web.ViewModels.CreateGameViewModel

@{
    ViewBag.Title = "EditGame";
}

<h2>EditGame</h2>


@using (Html.BeginForm("EditGame", "Game", FormMethod.Post))
{
